<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Avalonia.NETCoreApp1.Views.MainWindow"
        xmlns:viewModels="clr-namespace:Avalonia.NETCoreApp1.ViewModels"
        Title="Window with Button"
        Width="300" Height="300">
  <Window.DataContext>
    <viewModels:MainWindowViewModel />
  </Window.DataContext>
  <StackPanel Margin="10">
    <TextBlock Text="{Binding Path=MyAsyncText^, FallbackValue='Wait a second', Mode=OneWay}" />
  </StackPanel>
</Window>